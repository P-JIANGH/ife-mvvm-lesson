{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "commonjs": true,
        "worker": true,
        "serviceworker": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "forOf": true,
            "generators": true,
            "modules": true
        },
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "warn",
        "eqeqeq": "warn",
        "no-alert": "error"
    }
}